                    <tr>
                        <th  class="text-center">Notlar</th>
                        <th><a href="/admin/grade/create">Not Ekle</a></th>
                    </tr>
                </thead>
                <tbody>
                    <% noteCategories.forEach(noteCategory => { %>
                        <tr>
                            <td><%= noteCategory.name %></td>
                            <td>
                                <% 
                                let categoryNotes = notes.filter(note => note.categoryid == noteCategory.id);
                                if (categoryNotes.length > 0) {
                                    categoryNotes.forEach(note => { %>
                                        <div><%= note.note %></div>
                                    <% });
                                } else { %>
                                    <div>Not Yok</div>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbeody>
            </table>
        </div>
    </div>
</body>
</html>